	{% embed 'markup/section.html.twig' with {sectionClass : 'red'} %}
		{% block sectionContent %}
		<div class="w-row">
			<div class="w-col w-col-6 pricing-column-1">
				<h2 class="entry-h2">only 95 EUR</h2>
				<h3 class="h3-white">Early Bird Price until &nbsp;<br><span class="early-bird-date">April 16th</span></h3>
			</div>
			<div class="w-col w-col-6 pricing-column-2">
				<h2 class="entry-h2">free entry</h2>
				<h3 class="h3-white">FOR <span class="early-bird-date">Advanced+</span><br> WSDC Dancers</h3>
			</div>
		</div>
