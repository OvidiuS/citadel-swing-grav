{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
{% import 'partials/macros.html.twig' as macros %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}{# do assets.addCss('http://yui.yahooapis.com/pure/0.6.0/pure-min.css', 100) #}
        {% do assets.addCss('theme://css/normalize.css', 100) %}
        {% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', 99) %}
        {% do assets.addCss('//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', 98) %}
        {% do assets.addCss('//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css', 97) %}
        {% do assets.addCss('//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css', 96) %}
        {% do assets.addCss('theme://css/webflow.css', 95) %}
        {% do assets.addCss('theme://css/main.css', 94) %}
        {% do assets.addCss('theme://css/custom.css', 93) %}


    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('https://ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js', 101) %}
        {% do assets.addJs('theme://js/modernizr.js', 100) %}
        {% do assets.addJs('https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js', 99) %}
        {% do assets.addJs('//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js', 98) %}
        {% do assets.addJs('//cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js', 97) %}
        {% do assets.addJs('//cdn.foxycart.com/citadelswing/loader.js', 96) %}
        {% do assets.addJs('theme://js/webflow.js',95) %}
    {% endblock %}
    {{ assets.js() }}

	<script>
		WebFont.load({
			google: {
				families: ["Oswald:300,400,700","Montserrat:400,700"]
			}
		});
	</script>

{% endblock head%}
</head>
<body id="top" class="{{ page.header.body_classes }}">
{% block header %}
	<div data-collapse="medium" data-animation="default" data-duration="400" data-contain="1" data-doc-height="1" data-ix="hide-scroll-nav" class="w-nav mobilenav">
		<div class="w-container">
			<a href="/" class="w-nav-brand brand"><img width="220" src="{{ theme_url }}/images/logo-small-white2.png" class="floating-nav-logo" alt="Citadel Swing logo"></a>
			<nav class="w-nav-menu nav-menu">
        {% for page in pages.children -%}
          {%- if page.visible -%}
            {%- set current_page = (page.active or page.activeChild) ? ' w--current' : '' -%}
            {%- if page.children.count == 0 or page.url == '/'  %}
              <a class="main-menu-item w-nav-link float{{ current_page }}" href="{{ page.url }}">{{ page.menu }}</a>
            {% else %}
            <div class="w-dropdown" data-delay="0">
                <div class="main-menu-item w-dropdown-toggle float{{ current_page }}">
        		      <div>{{ page.menu }}</div>
        		    <div class="w-icon-dropdown-toggle"></div>
                </div>
              <nav class="menu-dropdown-list w-dropdown-list">
                {%- for child in page.children -%}
                  {%- if child.visible %}

                    <a class="main-menu-item subitem w-dropdown-link{{ current_page }}" href="{{ child.url }}">{{ child.menu }}</a>

                  {%- endif -%}
                {%- endfor %}

              </nav>
            </div>
            <!-- /.w-dropdown -->
            {% endif %}
          {% endif %}
        {% endfor %}

			</nav>
			<div class="w-nav-button main-menu-mobile-button">
				<div class="w-icon-nav-menu main-menu-icon"></div>
			</div>
		</div>
	</div>
	<!-- / mobile menu -->
{% endblock %}

{% block hero %}
	<div class="w-section hero">
		<div id="home" data-ix="scroll-nav" class="big-logo-bg">
			<div class="w-container">
				<h1 class="hero-heading{% if header.main_heading_text_size == 'small' %} smallHeroheading{% endif %}">{{ header.title }}</h1>
				{% block herocontent %}
				{% endblock %}

			</div>
			<!-- /.w-container -->
		</div>
		<!-- /.big-logo-bg -->
	</div>
	<!-- /.hero -->
{% endblock %}

<main>
{% block body %}

{% endblock %}
</main>

